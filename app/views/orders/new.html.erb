<h1 class="text-2xl font-bold mb-6">Nova narudžba</h1>

<%= form_with url: orders_path, method: :post do %>
  <table class="w-full border-collapse mb-6">
    <thead>
    <tr class="border-b">
      <th class="text-left p-2">Proizvod</th>
      <th class="text-left p-2">Cijena</th>
      <th class="text-left p-2">Količina</th>
    </tr>
    </thead>
    <tbody>
    <% @products.each do |product| %>
      <tr class="border-b">
        <td class="p-2"><%= product.name %></td>
        <td class="p-2"><%= number_to_currency(product.price_cents / 100.0, unit: "€") %></td>
        <td class="p-2">
          <%= number_field_tag "items[#{product.id}]", 0, min: 0, class: "border p-1 w-24" %>
        </td>
      </tr>
    <% end %>
    </tbody>
  </table>

  <%= submit_tag "Kreiraj narudžbu", class: "px-4 py-2 bg-green-600 text-white rounded" %>
<% end %>