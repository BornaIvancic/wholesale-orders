<h1 class="text-2xl font-bold mb-6">Proizvodi</h1>

<div class="mb-4">
  <%= link_to "➕ Novi proizvod", new_admin_product_path,
              class: "px-4 py-2 bg-blue-600 text-white rounded" %>
</div>

<table class="w-full border-collapse">
  <thead>
  <tr class="border-b">
    <th class="text-left p-2">Naziv</th>
    <th class="text-left p-2">SKU</th>
    <th class="text-left p-2">Cijena</th>
    <th class="text-left p-2">Aktivan</th>
    <th class="text-left p-2">Akcije</th>
  </tr>
  </thead>
  <tbody>
  <% @products.each do |product| %>
    <tr class="border-b">
      <td class="p-2"><%= product.name %></td>
      <td class="p-2"><%= product.sku %></td>
      <td class="p-2">
        <%= number_to_currency(product.price_cents / 100.0, unit: "€") %>
      </td>
      <td class="p-2">
        <%= product.active? ? "Da" : "Ne" %>
      </td>
      <td class="p-2 space-x-2">
        <%= link_to "Uredi", edit_admin_product_path(product),
                    class: "underline" %>

        <%= link_to "Obriši", admin_product_path(product),
                    method: :delete,
                    data: { confirm: "Jesi siguran?" },
                    class: "text-red-600 underline" %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>